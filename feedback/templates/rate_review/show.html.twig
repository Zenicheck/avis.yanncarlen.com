{% extends 'base.html.twig' %}

{% block title %}RateReview{% endblock %}

{% block body %}
    <h1>RateReview</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rate_review.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ rate_review.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ rate_review.email }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ rate_review.note }}</td>
            </tr>
            <tr>
                <th>Review</th>
                <td>{{ rate_review.review }}</td>
            </tr>
            <tr>
                <th>PublishDate</th>
                <td>{{ rate_review.publishDate ? rate_review.publishDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Publish</th>
                <td>{{ rate_review.publish ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rate_review_index') }}">back to list</a>

    <a href="{{ path('rate_review_edit', {'id': rate_review.id}) }}">edit</a>

    {{ include('rate_review/_delete_form.html.twig') }}
{% endblock %}
