{% extends 'base.html.twig' %}

{% block title %}Rate index{% endblock %}

{% block body %}
    <h1>Rate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rate in rates %}
            <tr>
                <td>{{ rate.id }}</td>
                <td>{{ rate.name }}</td>
                <td>{{ rate.slug }}</td>
                <td>{{ rate.description }}</td>
                <td>{{ rate.url }}</td>
                <td>
                    <a href="{{ path('rate_show', {'id': rate.id}) }}">show</a>
                    <a href="{{ path('rate_edit', {'id': rate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rate_new') }}">Create new</a>
{% endblock %}
